
// 车辆搜索
  CREATE TABLE car_searching (
  id INT NOT NULL AUTO_INCREMENT,
  start_address VARCHAR(200) NOT NULL,
  end_address VARCHAR(200) NOT NULL,
  driver_name VARCHAR(40) NOT NULL,
  driver_phone VARCHAR(11) NOT NULL,
  driver_remark VARCHAR(1000),
  residue_seat tinyint,
  driver_gender tinyint,
  start_time DATETIME,
  end_time DATETIME,
  publish_time DATETIME,
  PRIMARY KEY ( id )
  );



