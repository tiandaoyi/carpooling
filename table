// 乘客搜索
CREATE TABLE passenger_searching (
  id INT NOT NULL AUTO_INCREMENT,
  start_address VARCHAR(200) NOT NULL,
  end_address VARCHAR(200) NOT NULL,
  user_name VARCHAR(40) NOT NULL,
  user_phone VARCHAR(11) NOT NULL,
  user_remark VARCHAR(1000),
  quantity tinyint,
  user_gender tinyint,
  start_time DATETIME,
  end_time DATETIME,
  publish_time DATETIME,
  PRIMARY KEY ( id )
  );

// 基本信息 // 暂时不用
CREATE TABLE user_base_info (
  id INT NOT NULL AUTO_INCREMENT,
  driver_phone VARCHAR(11) NOT NULL,
  PRIMARY KEY ( id )
);

// 我的乘客信息
CREATE TABLE user_passenger_info (
  id INT NOT NULL AUTO_INCREMENT,
  name VARCHAR(40) NOT NULL,
  phone VARCHAR(11) NOT NULL,
  gender tinyint,
  login_phone VARCHAR(11),
  PRIMARY KEY ( id )
);

// 我的车主信息 login_phone临时当token去查询数据
CREATE TABLE user_owner_info (
  id INT NOT NULL AUTO_INCREMENT,
  driver_name VARCHAR(40) NOT NULL,
  driver_phone VARCHAR(11) NOT NULL,
  driver_seating tinyint,
  driver_gender tinyint,
  plate_number VARCHAR(40),
  vehicle_brand VARCHAR(50),
  login_phone VARCHAR(11),
  PRIMARY KEY ( id )
  );